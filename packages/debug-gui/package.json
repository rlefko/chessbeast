{
  "name": "@chessbeast/debug-gui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "chessbeast-debug-gui": "./dist/bin/debug-gui.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "start": "node dist/bin/debug-gui.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@chessbeast/pgn": "workspace:*",
    "@chessbeast/types": "workspace:*",
    "chalk": "^5.3.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "react": "^18.3.1",
    "ws": "^8.18.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.12",
    "@types/ws": "^8.5.13",
    "vitest": "^2.1.0"
  }
}
